<div class='d-flex justify-content-between p-3' style='background-color: #f1f1f1'>
  <a class='btn btn-primary' id='home-button'><i class='fa fa-home fa-fw'></i> Home</a>
</div>
<div class='d-flex justify-content-center align-items-center' style='background-color: #00ff40; height: 100px; font-weight: bold' id='purchase-message'>COMPRA FINALIZADA</div>
<div class='container' style='margin-top: 20px'>
  <h4>THE FOLLOWING PRODUCTS HAVEN'T BEEN BOUGHT SINCE THERE WHERE NO STOCK:</h4>
  <br />
  <div class='d-flex flex-column mb-3 gap-3' id='cart-data'>
    {{#each productsLeftInCart}}
      <div class='d-flex flex-row mb-10'>
        <img src='{{this.thumbnails}}' class='me-4 w-3' alt='Product image' style='height: 150px; width: 150px;object-fit: cover;' />
        <div class='w-70'>
          <h5>{{title}}</h5>
          <p style='font-weight: bold; font-size: 24px;'>{{price}} USD</p>
          <p>Quantity: {{quantity}} unit/s</p>
        </div>
      </div>
    {{/each}}
  </div>
</div>

<script>
  document.getElementById('home-button').addEventListener('click', function() {
    window.location.href = '{{baseUrl}}/home/products';
  });
</script>